{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://appland.com/schemas/scanner/match-pattern-config.json",
    "type": "object",
    "properties": {
        "additionalProperties": false,
        "ignoreCase": {
            "type": "boolean",
            "default": false
        },
        "equal": {
            "type": "string"
        },
        "include": {
            "type": "string"
        },
        "match": {
            "type": "string"
        }
    },
    "oneOf": [
        {
            "required": ["match"]
        },
        {
            "required": ["include"]
        },
        {
            "required": ["equal"]
        }
    ]
}
